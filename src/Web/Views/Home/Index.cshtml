@{
    ViewBag.Title = "Home Page";
}

<div class="row mt10 text-center">
    <h2>Give Feedback</h2>
    <div class="col-lg-4 col-lg-offset-4">
        @using (Html.BeginForm("Index", "Talk", FormMethod.Get))
        {
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit"><strong>Start</strong></button>
                </span>
                <input name="code" type="text" maxlength="6" class="form-control" placeholder="Presenter code...">
            </div>
        }
        <p class="small">Your presenter will provide this for you</p>
    </div>
</div>
<div class="row mt10 text-center">
    <h3>or</h3>
</div>
<div class="row mt10">
    <div class="col-lg-4 col-lg-offset-4">
        @Html.ActionLink("Get Feedback", "Create", "Presentation", null, new {@class= "btn btn-primary btn-block", role = "button" })
